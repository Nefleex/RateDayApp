<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttonRateYourDay"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="1dp"
        android:src="@drawable/smiley6"
        android:text="Today's rating"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="1dp"
        android:text="date"
        android:textSize="30sp" />



    <Button
        android:id="@+id/buttonRateYourDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Rate Your Day" />

    <TextView
        android:id="@+id/DayRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonRateYourDay"
        android:layout_marginBottom="300dp"
        android:text=""
        android:textSize="30sp" />



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="89dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/buttonOne"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:onClick="changeToOne"
                android:src="@drawable/smiley1"
                android:text="1" />

            <ImageButton
                android:id="@+id/buttonTwo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:onClick="buttonOnClick2"
                android:src="@drawable/smiley2"
                android:text="2" />

            <ImageButton
                android:id="@+id/buttonThree"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:onClick="buttonOnClick3"
                android:src="@drawable/smiley3"
                android:text="3" />

            <ImageButton
                android:id="@+id/buttonFour"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:onClick="buttonOnClick4"
                android:src="@drawable/smiley4"
                android:text="4" />

            <ImageButton
                android:id="@+id/buttonFive"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:onClick="buttonOnClick5"
                android:src="@drawable/smiley5"
                android:text="5" />
            <ImageButton
                android:id="@+id/buttonSix"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:onClick="buttonOnClick6"
                android:src="@drawable/smiley6"
                android:text="6" />
        </LinearLayout>



    </RelativeLayout>



</RelativeLayout>